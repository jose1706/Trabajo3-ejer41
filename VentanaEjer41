    private void empezarActionPerformed(java.awt.event.ActionEvent evt) {                                        
        int tamaño;
        try{
        tamaño = Integer.parseInt(JOptionPane.showInputDialog("Ingrese la cantidad de numeros: "));
        double[] numeros = new double[tamaño];
        for (int i=0;i<tamaño;i+=1){
            numeros[i] = Double.parseDouble(JOptionPane.showInputDialog("Ingrese el elemento"+(i+1)+": " ));
            if (numeros[i]<0){
                JOptionPane.showMessageDialog(null, "No se pueden usar valores negativos, revise y vuelva a intentar.");
                i -=1; 
            }
        }
        txtrespuesta.setText(String.valueOf(mayor.buscar(numeros, tamaño)));
        }catch(NumberFormatException e){
            JOptionPane.showMessageDialog(null, "No se pueden usar letras, revise y vuelva a intentar.");
        }
    }                                       

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
